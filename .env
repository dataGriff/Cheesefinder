# Environment variables for local development
# Copy this file to .env and update the values as needed

# Database Configuration
DATABASE_URL=postgres://cheesefinder_user:cheesefinder_password@localhost:5432/cheesefinder_db

# Application Configuration
NODE_ENV=development
PORT=5000

# Authentication Configuration (for local development)
REPL_ID=local-dev-client
ISSUER_URL=https://replit.com/oidc
SESS_SECRET=your-local-development-session-secret-key-change-in-production

# Development Mode (bypasses auth when true)
DEV_MODE=true

# Add any other environment variables your application needs
# AUTH_SECRET=your-secret-here
# API_KEY=your-api-key-here